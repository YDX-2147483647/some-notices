{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "detail": "jekyll serve",
            "type": "shell",
            "command": "bundler",
            "args": [
                "exec",
                "jekyll",
                "serve",
                "--incremental"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "Deploy",
            "detail": "All in one deployment",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Archive notices",
                "Deploy only"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Archive notices",
            "detail": "Archive outdated but active notices.",
            "type": "shell",
            "command": "./scripts/archive_notices.ps1",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [],
        },
        {
            "label": "Deploy only",
            "type": "shell",
            "command": "./scripts/deploy.ps1",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": [],
        },
    ]
}