{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve",
            "detail": "jekyll serve",
            "type": "shell",
            "command": "bundler",
            "args": [
                "exec",
                "jekyll",
                "serve",
                "--incremental"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "detail": "jekyll build (production)",
            "type": "shell",
            "command": "bundler",
            "args": [
                "exec",
                "jekyll",
                "build"
            ],
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "JEKYLL_ENV": "production"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Upload",
            "detail": "Send _site/ to SomeNotices.",
            "type": "shell",
            "command": "scp",
            "args": [
                "-r",
                "./_site/*",
                "SomeNotices:/var/www/html/"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Clear remote files",
            "detail": "remove /var/www/html/* on SomeNotices",
            "type": "shell",
            "command": "ssh",
            "args": [
                "SomeNotices",
                "rm",
                "-rf",
                "/var/www/html/*"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Reload server",
            "detail": "nginx -s reload on SomeNotices",
            "type": "shell",
            "command": "ssh",
            "args": [
                "SomeNotices",
                "nginx",
                "-s",
                "reload"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Deploy",
            "detail": "All in one deployment",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build",
                "Clear remote files",
                "Upload",
                "Reload server"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
    ]
}